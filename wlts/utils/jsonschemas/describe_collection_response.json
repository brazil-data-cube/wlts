{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.esensing.dpi.inpe.br/wlts/ddescribe_collection_response.json",
  "type": "object",
  "title": "WLTS - Describe Collection operation",
  "required": [
    "name",
    "description",
    "detail",
    "collection_type",
    "resolution_unit",
    "period",
    "spatial_extent",
    "datasource"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The Collection Name",
      "default": "",
      "examples": [
        "Prodes"
      ],
      "pattern": "^(.*)$"
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "title": "The Collection Description",
      "default": ""
    },
    "detail": {
      "$id": "#/properties/detail",
      "type": "string",
      "title": "The Collection Detail",
      "default": ""
    },
    "collection_type": {
      "$id": "#/properties/collection_type",
      "type": "string",
      "title": "The Collection Type",
      "default": "",
      "examples": [
        "Feature"
      ]
    },
    "resolution_unit": {
      "$id": "#/properties/resolution_unit",
      "type": "object",
      "title": "The Collection Resolution Unit",
      "required": [
        "unit",
        "value"
      ],
      "properties": {
        "unit": {
          "type": "string",
          "title": "The Unit of Time",
          "default": "",
          "examples": [
            "DAY"
          ]
        },
        "value": {
          "type": "number",
          "title": "The Value of Time",
          "default": "",
          "examples": [
            1
          ]
        }
      }
    },
    "period": {
      "$id": "#/properties/period",
      "type": "object",
      "title": "The Collection period",
      "required": [
        "start_date",
        "end_date"
      ],
      "properties": {
        "start_date": {
          "$id": "#/properties/period/properties/start_date",
          "type": "string",
          "title": "The Start Date of Collection",
          "default": "",
          "examples": [
            "2017-12-31"
          ],
          "pattern": "^(.*)$"
        },
        "end_date": {
          "$id": "#/properties/period/properties/end_date",
          "type": "string",
          "title": "The End Date of Collection",
          "default": "",
          "examples": [
            "2017-12-31"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "spatial_extent": {
      "$id": "#/properties/spatial_extent",
      "type": "object",
      "title": "The Spatial Extent Collection",
      "required": [
        "xmin",
        "xmax",
        "ymin",
        "ymax"
      ],
      "properties": {
        "xmin": {
          "$id": "#/properties/spatial_extent/properties/xmin",
          "type": "number",
          "title": "The X minimum",
          "default": 0,
          "examples": [
            -81.2341289433377
          ]
        },
        "xmax": {
          "$id": "#/properties/spatial_extent/properties/xmax",
          "type": "number",
          "title": "The X maximum ",
          "default": 0,
          "examples": [
            -29.9999999973059
          ]
        },
        "ymin": {
          "$id": "#/properties/spatial_extent/properties/ymin",
          "type": "number",
          "title": "The Y minimum",
          "default": 0,
          "examples": [
            -39.9999999964109
          ]
        },
        "ymax": {
          "$id": "#/properties/spatial_extent/properties/ymax",
          "type": "number",
          "title": "The Y maximum",
          "default": 0,
          "examples": [
            9.99999999910497
          ]
        }
      },
      "classification_system": {
        "$id": "#/properties/classification_system",
        "type": "object",
        "title": "The Classification System",
        "required": [
          "classification_system_id",
          "classification_system_name",
          "type"
        ],
        "properties": {
          "classification_system_id": {
            "$id": "#/properties/classification_system/properties/classification_system",
            "type": "number",
            "title": "The classification system id",
            "default": 1,
            "examples": [
              21
            ]
          },
          "classification_system_name": {
            "$id": "#/properties/classification_system/properties/classification_system_name",
            "type": "string",
            "title": "The classification system name",
            "default": "",
            "examples": [
              "Deter Amaz√¥nia"
            ]
          },
          "type": {
            "$id": "#/properties/classification_system/properties/type",
            "type": "string",
            "title": "The classification system type",
            "default": "",
            "examples": [
              "Self"
            ]
          }
        }
      },
      "datasource": {
        "$id": "#/properties/datasource",
        "type": "object",
        "title": "The Collection datasource",
        "required": [
          "host",
          "layers"
        ],
        "properties": {
          "host": {
            "type": "string",
            "title": "The host of datasource",
            "default": "",
            "examples": [
              "http://brazildatacube.dpi.inpe.br/bdc/geoserver"
            ]
          },
          "layers": {
            "type": "array",
            "items": {
              "type": "object",
              "title": "The Layers of datasource",
              "required": [
                "layer_name",
                "workspace"
              ],
              "properties": {
                "layer_name": {
                  "type": "string",
                  "title": "The name of layer",
                  "default": "",
                  "examples": [
                    "prodes"
                  ]
                },
                "data_field": {
                  "type": "string",
                  "title": "The data_field of the layer",
                  "default": "",
                  "examples": [
                    "prodes"
                  ]
                },
                "workspace": {
                  "type": "string",
                  "title": "The workspace of layer",
                  "default": "",
                  "examples": [
                    "prodes"
                  ]
                },
                "propertyname": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}